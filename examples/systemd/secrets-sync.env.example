# Environment variables for secrets-sync systemd service
# Copy this file to /etc/default/secrets-sync and customize

# Vault connection
VAULT_ADDR=https://vault.example.com:8200
#VAULT_TOKEN=your-token-here
#VAULT_ROLE_ID=your-role-id
#VAULT_SECRET_ID=your-secret-id

# TLS configuration
#VAULT_CACERT=/etc/secrets-sync/ca.pem
#VAULT_CAPATH=/etc/ssl/certs
#VAULT_SKIP_VERIFY=false
#VAULT_CLIENT_CERT=/etc/secrets-sync/client.pem
#VAULT_CLIENT_KEY=/etc/secrets-sync/client-key.pem

# Application settings
LOG_LEVEL=info
WATCH_CONFIG=false

# Metrics and health endpoints
METRICS_ADDR=127.0.0.1
METRICS_PORT=8080
ENABLE_METRICS=true

# Circuit breaker settings
#CIRCUIT_BREAKER_MAX_REQUESTS=3
#CIRCUIT_BREAKER_INTERVAL=60s
#CIRCUIT_BREAKER_TIMEOUT=30s

# Retry settings
#INITIAL_BACKOFF=1s
#MAX_BACKOFF=30s
#BACKOFF_MULTIPLIER=2.0

# Tracing (optional)
#ENABLE_TRACING=false
#OTEL_EXPORTER_ENDPOINT=http://jaeger:4318
